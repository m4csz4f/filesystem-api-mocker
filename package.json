{
  "name": "filesystem-api-mocker",
  "version": "0.1.0",
  "description": "Simple api mocker using filesystem structure to define endpoints",
  "main": "src/app.js",
  "type": "module",
  "engines": {
    "node": ">=22.14.0"
  },
  "scripts": {
    "dev": "nodemon",
    "start": "node src/app.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write ."
  },
  "author": "szaflarskim.dev@outlook.com",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jsonc-parser": "^3.3.1",
    "node-fetch": "^3.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "eslint": "^9.32.0",
    "globals": "^16.3.0",
    "nodemon": "^2.0.15",
    "prettier": "^3.6.2",
    "supertest": "^6.3.4",
    "vitest": "^1.6.0"
  },
  "nodemonConfig": {
    "exec": "node src/app.js",
    "watch": [
      "src",
      ".env",
      "mock_config.json",
      "*.config.json",
      "*.config.jsonc",
      "*.mock.json",
      "*.mock.jsonc"
    ],
    "ignore": [
      "node_modules/**/node_modules",
      ".git"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  },
  "prettier": {
    "arrowParens": "avoid",
    "singleQuote": true,
    "trailingComma": "all"
  }
}
